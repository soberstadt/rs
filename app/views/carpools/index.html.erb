				});
				GEvent.addListener(locations['<%=key%>']['marker'], "infowindowopen", function() {
					onMarkerOpen('<%=key%>');
				});
				GEvent.addListener(locations['<%=key%>']['marker'], "dblclick", function() {
					double_click_location('<%=key%>');
				});
